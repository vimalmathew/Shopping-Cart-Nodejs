<section>
    <div class="container mt-3 ">
        <div class="row pt-2">
            <a href="/admin/add-product"  class="btn btn-primary ml-auto">Add Product</a>
        </div>
        <div class="mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img src="product-images/{{this._id}}.jpg" style="height: 5rem; width:7rem" ></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</section>