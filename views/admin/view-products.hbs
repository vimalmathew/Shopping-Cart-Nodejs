<section>
    <div class="container mt-3 ">
        <div class="row pt-2">
            <a href="/admin/add-product"  class="btn btn-primary ml-auto">Add Product</a>
        </div>
        <div class="mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.count}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img src="{{this.image}}" style="height: 5rem; width:7rem" ></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</section>